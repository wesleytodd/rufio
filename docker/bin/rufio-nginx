#! /bin/bash
# Usage:
#
# rufio-nginx <HOSTNAME> <PORT>
#
# Example:
#
# $ rufio-nginx example.com 8080

# Get directory of this file
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Echo command we are running
echo "docker run -d -p $2:80 -v $DIR/../config:/etc/nginx/sites-enabled -v $DIR/../log:/var/log/nginx -v $DIR/../../build:/usr/local/rufio/$1 dockerfile/nginx"

# Start the Nginx container
docker run -d \
	-p $2:80 \
	-v $DIR/../config/nginx:/etc/nginx/sites-enabled \
	-v $DIR/../log/nginx:/var/log/nginx \
	-v $DIR/../../build:/usr/local/rufio/$1 \
	dockerfile/nginx
